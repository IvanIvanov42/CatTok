@if (Media.MediaType == "IMAGE")
{
    <div class="media-content">
        <img src="@Media.MediaUrl" alt="Media Content" class="img-fluid" style="max-width:150px">
        @if (!string.IsNullOrEmpty(Media.Caption))
        {
            <div class="caption" style="position: absolute; bottom: 0; background-color: rgba(0, 0, 0, 0.5); color: white; width: 100%; text-align: center; padding: 10px; visibility: hidden;">
                @Media.Caption
            </div>
        }
    </div>
}
@code {
    [Parameter]
    public Media Media { get; set; }
}

@inherits LayoutComponentBase

<CascadingValue Value="SelectedUsername">
    <CascadingValue Value="(Action<string>)SetSelectedUsername">
        <div class="d-flex justify-content-between align-items-center pt-2 px-5 mb-0">
            <div><a href="/"><img src="./img/Logo.png" style="width:56px" /></a></div>
            <div><a href="https://instagram.com/@SelectedUsername" style="text-decoration:none">@@@SelectedUsername</a></div>
            <div @onclick="@(() => Modal.Show<Information>(options))">
                <img src="img/info.svg" style="width:36px; height:auto;" />
            </div>
        </div>

        <main class="px-5 py-2">
            @Body
        </main>
    </CascadingValue>
</CascadingValue>

@code {
    [CascadingParameter] public IModalService Modal { get; set; } = default!;
    ModalOptions options = new ModalOptions()
        {
            Size = ModalSize.Large,
            HideCloseButton = true,
            HideHeader = true
        };
    public string SelectedUsername { get; set; }

    private void SetSelectedUsername(string username)
    {
        SelectedUsername = username;
        StateHasChanged();
    }
}

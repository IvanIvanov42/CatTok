@page "/streaming"
@inject IJSRuntime JSRuntime
@inject IStreamingService StreamingService


<video id="livestreamVideo" autoplay playsinline></video>

<button @onclick="StartStreaming" disabled="@isStreaming">Start Streaming</button>
<button @onclick="StopStreaming" disabled="@(!isStreaming)">Stop Streaming</button>

@code {
    private bool isStreaming = false;

    protected override async Task OnInitializedAsync()
    {
        await StreamingService.InitializeAsync();
    }

    private async Task StartStreaming()
    {
        bool success = await JSRuntime.InvokeAsync<bool>("streamingFunctions.startStreaming");
        if (success)
        {
            isStreaming = true;
        }

        await StreamingService.TestStream();
    }

    private async Task StopStreaming()
    {
        await JSRuntime.InvokeVoidAsync("streamingFunctions.stopStreaming");
        isStreaming = false;
    }
}
